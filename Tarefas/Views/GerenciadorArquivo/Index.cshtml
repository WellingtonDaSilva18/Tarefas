@{
    ViewBag.Title = "Gerenciador de Arquivos";
    ViewBag.Pagina = "Gerenciador de Arquivos";
}
<link href="~/Content/toastr.css" rel="stylesheet" />

@section script {
    <script src="~/Scripts/Controllers/GerenciadorArquivos/GerenciadorArquivo.js"></script>
    @*<script src="~/Scripts/toastr.js"></script>*@
    <script src="~/Scripts/toastr.js"></script>
}
<div style="padding-bottom: 30px;">
    <label style="background-color: rebeccapurple;border-radius: 5px;color: #fff;cursor: pointer;margin: 10px;padding: 6px 20px" for="ctrl">Escolher Diretório</label>
    <input style="display:none" type="file" id="ctrl" webkitdirectory directory multiple />
</div>
<table style="color:#6700ff" class="table table-bordered collapse text-center">
    <thead>
        <tr>
            <th id="qtdArquivos"></th>
        </tr>
    </thead>
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Quantidade</th>
            <th scope="col">Extensão</th>
            <th scope="col">Arquivo(s)</th>
        </tr>
    </thead>
    <tbody id="conteudo">
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="modal-ListarArquivos" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Arquivos</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="list-group" id="Arquivoaqui">

                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-text" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Texto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <textarea readonly style="max-width: 1100px !important; resize:auto !important;" id="textoaqui">

                </textarea>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>
